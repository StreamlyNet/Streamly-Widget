<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Streamly widget</title>
    <% if(prod) {%>
    <link rel="stylesheet" type="text/css" href="out/css/main.min.css">
    <link rel="stylesheet" type="text/css" href="out/css/clientScreen.min.css">
    <% } else {%>
    <link rel="stylesheet" type="text/css" href="stylesheets/main.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/clientScreen.css">
    <% } %>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://use.fontawesome.com/bfc751953e.js"></script>
  </head>
  <body>
      <div class="videoContainer__body display">
      <div class="videoContainer__msgs hide">The call has been declined</div>
        <div class="flex gutterHLg">
          <div class="videoContainer" id="videoContainer">
            <div id="remoteContainer">
              <div class="callingScreen ">
                <div class="callingScreen__name"></div>
              </div>
            <div class="loadingScreen hide">
                <div class="loadingScreen__container">
                    <div>
                        <img class="loadingScreen__image" src='../imgs/streamlyVectorIconNoText.png'/>
                        <div class="loadingScreen__text">Reconnecting</div>
                    </div>
                </div>
            </div>
          </div>
          <div  id="localVideoContainer" class="display">
            <video id="localVideo"></video>
          </div>
          <div class="btnContainer display">
            <div class="btnContainer__overlay"></div>
            <div class="btnContainer__video">
                <button title="Mute" class="btn clrP clrBr btn-default clrSh2 js-mute "><i class="fa fa-microphone" aria-hidden="true"></i></button>
                <button title="End video" class="btn clrP clrBr btn-default red clrSh2 js-end"><i class="fa fa-phone end-call" aria-hidden="true"></i></button>
                <button title="Pause video" class="btn clrP clrBr btn-default clrSh2 js-pause"><i class="fa fa-video-camera" aria-hidden="true"></i></i></button>
                <button title="Fullscreen" class="btn clrP clrBr btn-default clrSh2 js-fullScreen"><i class="fa fa-arrows-alt" aria-hidden="true"></i></button>
            </div>
            <button title="Chat" class="btn clrP clrBr btn-default clrSh2 openchatbtn js-openchat"><i class="fa fa-comments" aria-hidden="true"></i></button>
          </div>
          <div class="btnContainer top display">
            <div class="callingString hide">Calling</div>
            <div class="nickname text-ellipsis" title=""></div>
            <div class="durationDisplay__text"><span class="durationDisplay__number">00:00</span></div>
            <div class="btnContainer__overlay"></div>
            <div class="centPerMinute__container">$<span class="centPerMinute__value">0.00</span>cent/sec</div>
          </div>
        </div>
        <div class="chatContainer">
          <img class="chatLogo" src="../imgs/streamlyVectorIconNoText.png" >
          <div class="chatBar"></div>
          <input class="chatInput" placeholder="Type a message..." type="text">

        </div>
      </div>
    </div>
  </div>
    <script>
      config = {};
      config.signallingServer = '<%= config.webrtc.signallingServer%>';
      config.callTimerDelay = '<%= config.webrtc.callTimerDelay%>';
    </script>
    <script src='/js/libs/simplewebrtc-with-adapter.bundle.js'></script>
    <% if(prod) {%>
      <script src='/out/js/main.min.js'></script>
    <% } else {%>
    <script src='/js/videoEvents.js'></script>
    <script src='js/chatEvents.js'></script>
    <script src='/js/main.js'></script>
    <% } %>
  </body>
</html>
